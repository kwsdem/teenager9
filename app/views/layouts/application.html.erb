<!DOCTYPE html>
<html>
  <head>

    <title>Teenager</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <% if Rails.env == "production"  %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-74242352-1', 'auto');
        ga('send', 'pageview');

      </script>
    <% end %>
  </head>
  <body class="
  <% if user_signed_in? %>
    <% if current_user.sex == "male" %> 
      boys-bg 
    <% end %>
    <% if current_user.sex == "female" %>
      girls-bg
    <% else %>
      else
    <% end %>
  <% else %>
    else
  <% end %>
  ">
      <%= render 'shared/navbar' %>
      <%= debug(params) if Rails.env.development? %>
      <% unless notice.blank? %>
        <div class="alert alert-info alert-dismissable alert-fixed">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
      <% unless alert.blank? %>
        <div class="alert alert-danger alert-dismissable alert-fixed">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
      <div class="container">
        <%= yield %>
      </div>
    </body>
  </body>
</html>
