<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :"Παραλήπτες" %>
      <%= f.select(:recipients, current_user.followers.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "form-control" })%>
    </div>
    <div class="form-group">
     	<%= f.label :"Θέμα" %>
     	<%= f.text_field :Subject, placeholder: "Θέμα", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :"Μύνημα" %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Γράψτε το μύνημά σας εδώ....", rows: 4  %>
    </div>

    <%= f.submit "Αποστολή", class: "btn btn-success" %>
    
<% end %>