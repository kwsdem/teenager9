<div class="info">
  <%= render 'shared/avatar', user: post.user %>
  <h4 class="name"><% if post.user.sex == "female" %>
    Η <%= post.user.name %>
  <% else %>
    Ο <%= post.user.name %>
  <% end %></h4>
  <span class="action">δημιούργησε μια <%= link_to 'δημοσίευση', post %></span>
</div>
<div class="content">
  <span class="text"><p><%= post.content %></p></span>
  <% if post.attachment.present? %>
    <div class="attachment">
      <%= image_tag post.attachment %>
    </div>
  <% end %>
  <%= render 'shared/created_at', activity: post %>
  <div class="points">
    <span class="like-count"> Αρέσει σε <%= pluralize(post.cached_votes_up, '') %> άτομα</span>
    <span class="comments-count"><%= pluralize(post.comments_count, '') %> Σχόλια</span>
    <div class="pull-right">
      <% if belongs_to_user?(post) %>
        <%= link_to edit_post_path(post), class: 'btn btn-primary btn-sm' do %>
          <% fa_icon 'pencil' %>
        <% end %>
        <%= link_to post_path(post), method: :delete, class:'btn btn-danger btn-sm', remote: remote do %>
          <% fa_icon 'trash' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: post %>