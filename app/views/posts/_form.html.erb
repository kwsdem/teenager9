<div class="well">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <h4>Ενημέρωσε τον τοίχο σου</h4>
      <%= f.text_area :content, class: 'form-control', autofocus: true, placeholder: 'Τι νέο...' %>
    </div>
    <div id="img-preview" class="form-group hidden">
      <img src="" alt="Preview">
    </div>
    <div class="form-group hidden">
      <%= f.file_field :attachment %>
    </div>
    <div class="form-group">
      <a id="post-attachment" href="javascript:void(0);" class="pull-right btn btn-primary">
        <%= fa_icon 'image' %>
      </a>
      <%= f.submit 'Δημοσίευσε', class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>