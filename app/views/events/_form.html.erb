<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.label :"Όνομα εκδήλωσης" %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Όνομα εκδήλωσης', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :"Ημερομηνία" %>
    <%= f.text_field :when, placeholder: 'Πότε είναι;', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :"Τοποθεσία" %>
    <%= f.text_field :location, placeholder: 'Που είναι;', class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :"Δημιουργία", class: 'btn btn-success' %>
  </div>
<% end %>