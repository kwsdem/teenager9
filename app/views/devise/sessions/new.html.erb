<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Σύνδεση</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :"Email" %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email@example.com' %>
      </div>
      <div class="form-group">
        <%= f.label :"Κωδικός" %>
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'κωδικός' %>
      </div>
      <% if devise_mapping.rememberable? -%>
      <% end -%>
      <div class="actions">
        <%= f.submit 'Σύνδεση', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>