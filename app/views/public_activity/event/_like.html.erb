<% if activity.trackable.present? %>
  <div class="activity-like">
    <div class="info">
      <%= render 'shared/avatar', user: activity.owner %>
      <h4 class="name">
      <% if activity.owner.sex == "female" %>
        Η 
      <% else %>
        Ο 
      <% end %> <%= activity.owner.name %></h4>
      <span class="action">αρέσει μία <%= link_to 'δημοσίευση', activity.trackable %></span>
    </div>
    <div class="content">
      <h4><small><%= activity.trackable.name %></small></h4>
      <h4><small><%= fa_icon'calendar' %> <%= formatted_time(activity.trackable.when) %></small></h4>
      <h4><small><%= fa_icon 'map-marker' %> <%= activity.trackable.location %></small></h4>
    </div>
    <%= render 'shared/created_at', activity: activity %>
  </div>
<% end %>