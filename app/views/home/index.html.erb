<div class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <% if current_user.sex == "male" %>
      <iframe seamless="seamless" style="border: none; overflow: hidden;" height="450" width="100%" scrolling="no" src="http://assets-polarb-com.a.ssl.fastly.net/api/v4/publishers/kwsdem/embedded_polls/iframe?poll_id=235932"></iframe>
    <% else %>
      <iframe seamless="seamless" style="border: none; overflow: hidden;" height="450" width="100%" scrolling="no" src="http://assets-polarb-com.a.ssl.fastly.net/api/v4/publishers/kwsdem/embedded_polls/iframe?poll_id=235934"></iframe>
    <% end %>
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <div class="sidebar2">
      <ul>
        <li class="category2">
          Φιλίες:
        </li>
      </ul>
      <%= render_activities(@activitiesss, layout: '/shared/activity') %>
    </div>
    <div class="sidebar1">
      <ul>
        <li class="category1">
          Σχόλια:
        </li>
      </ul>
      <%= render_activities(@activitiess, layout: '/shared/activity') %>
    </div>

    <%= render 'shared/paginate', resources: @activities %>
  </div>
<!--   <div class="col-lg-4">
    <%= render 'shared/links' %>
  </div> -->
</div>